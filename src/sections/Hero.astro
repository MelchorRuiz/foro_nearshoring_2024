---
import { getI18N } from "../i18n";
const i18n = getI18N(Astro.currentLocale);
---

<section
    class="relative min-h-[105vh] bg-gray-900/40 overflow-hidden"
>
    <img
        class="absolute top-0 left-0 w-full h-full object-cover -z-10"
        src="/hero.webp"
        alt="background"
    />
    <div class="h-screen pt-32">
        <div
            class="flex flex-col items-center lg:items-start text-white"
        >
            <p
                class="lg:pl-5 text-[2.8rem] lg:text-[3.7rem] uppercase leading-none lg:leading-10"
            >
                Foro
            </p>
            <h1
                class="uppercase font-open-sans font-bold text-center lg:text-left text-[3rem] lg:text-[8rem] leading-[1] lg:leading-[0.8] lg:pl-5 flex lg:flex-col"
            >
                Near
                <span class="font-bold text-[#55aff4c2] brightness-125">shoring</span>
            </h1>
            <h2
                class="lg:mt-4 p-4 flex flex-col items-center lg:items-start md:text-left md:text-2xl lg:bg-[#9ed3fc2a] lg:pl-5 uppercase"
            >
                {i18n.hero.subtitle[0]}
                <span class="font-bold">{i18n.hero.subtitle[1]}</span>
            </h2>
            <p
                class="py-2 px-4 text-center md:text-left md:text-2xl border-2 rounded-full lg:ml-5 mt-4 uppercase"
            >
                {i18n.hero.date}
            </p>
            <p
                class="py-2 px-4 text-center md:text-left lg:ml-5 mt-1 uppercase"
            >
                | Auditorio Mateo Herrera
            </p>
            <div class="flex justify-center lg:justify-end w-full px-10 pt-5 lg:pt-0">
                <a class="uppercase bg-sky-600 py-3 px-10 text-white z-20 font-semibold text-2xl lg:text-4xl" href="#register">{i18n.hero.free_event}</a>
            </div>
        </div>
    </div>
    <div
        class="bg-gradient-to-t from-primary to-transparent absolute bottom-0 h-52 w-full"
    >
    </div>
</section>

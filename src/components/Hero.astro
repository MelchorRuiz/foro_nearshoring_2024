---
import { CounterDown } from "./CounterDown";

import { getI18N } from "../i18n";
const i18n = getI18N(Astro.currentLocale);
---

<section class="hero relative w-full min-h-screen bg-[url('/bg_hero.webp')] bg-no-repeat bg-center bg-cover py-36 px-4 flex flex-col justify-start items-center text-white before:absolute before:top-0 before:left-0 before:w-full before:h-full z-0 before:bg-gray-900/60">
    <h1 class="relative z-10 text-5xl font-jersey font-normal text-center md:text-6xl lg:text-8xl" style="text-shadow: 3px 1px 2px black;">{i18n.title}</h1>
    <div class="relative z-10 w-1/12 h-[2px] bg-white my-4 rounded-2xl md:w-1/6 lg:w-3/12"></div>
    <h3 class="relative z-10 text-center">{i18n.subtitle}</h3>
    <CounterDown i18n={i18n.counter} client:only="react" />
</section>
